<%- include('header.ejs') %>

<div class="container mt-5 mb-5">
  <section>
    <h4>PRODUCTO NUEVO</h4>

    <form action="/newproduct" method="POST">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Agregar un producto nuevo</h5>
          <p class="card-text">
            Ingresa los siguientes datos del producto que deseas agregar:
          </p>

          <!-- Nombre del producto -->
          <div>
            <p><b>Nombre del producto</b></p>
            <div class="input-group input-group-ml mb-3">
              <input
                type="text"
                name="product"
                class="form-control"
                required
                placeholder="Ej. Camiseta"
              />
            </div>
          </div>

          <!-- Precio -->
          <div class="mt-3">
            <p><b>Precio</b></p>
            <div class="input-group">
              <input
                type="number"
                name="price"
                class="form-control"
                step="0.01"
                required
                placeholder="Ej. 25.99"
              />
              <span class="input-group-text">$</span>
            </div>
          </div>

          <!-- Imagen (solo decorativo, ya se asigna por defecto en backend) -->
          <div class="mt-3">
            <p><b>Carga una imagen</b></p>
            <div class="input-group mb-3 mt-3">
              <input
                type="file"
                class="form-control"
                id="inputGroupFile02"
                disabled
              />
              <label class="input-group-text" for="inputGroupFile02"
                >Upload (desactivado)</label
              >
            </div>
          </div>

          <!-- Tags -->
          <div class="mt-3">
            <p><b>Elige tag(s)</b></p>
            <div class="form-check">
              <input
                type="checkbox"
                name="tags"
                value="work"
                class="form-check-input"
                id="tag-work"
              />
              <label class="form-check-label" for="tag-work">Work</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                name="tags"
                value="lifestyle"
                class="form-check-input"
                id="tag-lifestyle"
              />
              <label class="form-check-label" for="tag-lifestyle"
                >Lifestyle</label
              >
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                name="tags"
                value="motor"
                class="form-check-input"
                id="tag-motor"
              />
              <label class="form-check-label" for="tag-motor">Motor</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                name="tags"
                value="mobile"
                class="form-check-input"
                id="tag-mobile"
              />
              <label class="form-check-label" for="tag-mobile">Mobile</label>
            </div>
          </div>

          <!-- Botón de envío -->
          <div class="mt-5 mb-3">
            <button type="submit" class="btn btn-primary">Agregar</button>
          </div>
        </div>
      </div>
    </form>
  </section>
</div>

<%- include('footer.ejs') %>
